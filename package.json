{
  "name": "word-translation",
  "displayName": "Word Translation",
  "description": "一款纯粹的VSCode划词翻译插件",
  "keywords": [
    "翻译",
    "划词翻译",
    "translation",
    "word translation"
  ],
  "version": "0.1.0",
  "publisher": "QuanQuan-CHO",
  "author": {
    "email": "12011619@mail.sustech.edu.cn",
    "name": "QuanQuan-CHO",
    "url": "https://github.com/QuanQuan-CHO"
  },
  "repository": "https://github.com/QuanQuan-CHO/vscode-word-translation",
  "bugs": {
    "url": "https://github.com/QuanQuan-CHO/vscode-word-translation/issues"
  },
  "license": "MIT", 
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.31.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "word-translation.translate",
        "title": "Translate"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "word-translation.translate",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "publish": "vsce package",
    "build:web": "webpack",
    "test:web": "npx vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./dist/web/extension.js",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.31.1",
    "@vscode/test-web": "^0.0.15",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {}
}
